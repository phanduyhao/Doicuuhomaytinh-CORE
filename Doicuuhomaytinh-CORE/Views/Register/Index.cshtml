@using Doicuuhomaytinh_CORE.Helpper;
@model Doicuuhomaytinh_CORE.Models.Account;
@{
    ViewData["Title"] = "Đăng ký tài khoản";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="d-flex align-items-center justify-content-center w-100 h-100 " style="background:#0000008a">
    <div class="register-box">
        <div class="register-logo">
            <a class="" href="/Admin">
                <img src="/media/logo/logo-CHMT.png" alt="Đội CHMT" width="80" height="80">
                <h4 class="text-white font-weight-bold">Đội CHMT</h4>
            </a>
        </div>

        <div class="card">
            <div class="card-body register-card-body">
                <h4 class="text-center text-dark font-weight-bold">
                    Đăng ký tài khoản</h4>

                <form asp-controller="Register" asp-action="Index" novalidate method="post">
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" asp-for="FullName" required placeholder="Họ tên" pattern="[a-z]{1,15}">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-user"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input type="email" class="form-control" asp-for="Email" required placeholder="Email">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input type="number" class="form-control" asp-for="Phone" placeholder="Số điện thoại">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input type="password" class="form-control" asp-for="Password" required placeholder="Mật khẩu">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input type="password" class="form-control" asp-for="Password" required placeholder="Nhập lại mật khẩu">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                        <p class="text-danger">@Functions._MessageEmail</p>
                    <div class="row">
                        <div class="col-8">
                            <div class="icheck-primary">
                                <input type="checkbox" id="agreeTerms" name="terms" value="agree">
                                <label for="agreeTerms">
                                    Tôi đồng ý với các<a href="#">Điều khoản</a>
                                </label>
                            </div>
                        </div>
                        <!-- /.col -->
                        <div class="col-4">
                            <button type="submit" class="btn btn-primary btn-block">Đăng ký</button>
                        </div>
                        <!-- /.col -->
                    </div>
                </form>

                <div class="social-auth-links text-center">
                    <p>- OR -</p>
                    <a href="#" class="btn btn-block btn-primary">
                        <i class="fab fa-facebook mr-2"></i>
                        Đăng ký bằng Facebook
                    </a>
                    <a href="#" class="btn btn-block btn-danger">
                        <i class="fab fa-google-plus mr-2"></i>
                        Đăng ký bằng Google+
                    </a>
                </div>

                <a href="dang-nhap.html" class="text-center">Đăng nhập!</a>
            </div>
            <!-- /.form-box -->
        </div><!-- /.card -->
    </div>
</div>


