@model Doicuuhomaytinh_CORE.Models.News

@{
    ViewData["Title"] = "Chỉnh sửa bài viết";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<section class="content">
    <div class="card">
        <div class="card-header">
            <h3 class="font-weight-bold text-success ">Chỉnh sửa bài viết</h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <div id="" class="jsgrid" style="">
                <form asp-area="Admin" asp-controller="AdminNews" asp-action="Edit" asp-route-id="@Model.PostId" method="post" enctype="multipart/form-data" >
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="PostId" />
                    <input type="hidden" asp-for="Thumb" />
                    <table class="table table-bordered table-white">
                        <thead>
                            <tr class="text-center">
                                <th>Ảnh</th>
                                <th>Tiêu đề</th>
                                <th>Trạng thái </th>
                                <th>IsHot?</th>
                                <th>IsNewFeed?</th>
                                <th>Danh mục</th>
                            </tr>
                        </thead>

                        <tbody>
                            <tr class="text-center">
                                <td style="width:150px">
                                    <div class="form-group">
                                        <input name="fThumb" type="file" class="form-control-file" asp-for="Thumb" />
                                        <span asp-validation-for="Thumb" class="text-danger"></span>
                                    </div>
                                </td>
                                <td>
                                    <div class="form-group">
                                        <input type="text" asp-for="Title" class="form-control" />
                                        <span asp-validation-for="Title" class="text-danger"></span>
                                    </div>
                                </td>
                                <td style="width:100px">
                                    <div class="form-group">
                                        <input class="form-check-input" asp-for="Acive" /> @Html.DisplayNameFor(model => model.Acive)
                                    </div>
                                </td>
                                <td style="width:100px">
                                    <div class="form-group">
                                        <input class="form-check-input" asp-for="Ishot" /> @Html.DisplayNameFor(model => model.Ishot)
                                    </div>
                                </td>
                                <td style="width:100px">
                                    <div class="form-group">
                                        <input class="form-check-input" asp-for="IsNewfeed" /> @Html.DisplayNameFor(model => model.IsNewfeed)
                                    </div>
                                </td>
                                <td style="width:100px">
                                    <select class="custom-select" asp-for="CateId" style="min-width: 200px;" asp-items="ViewBag.DanhMuc">
                                        <option value="" selected>Chọn danh mục</option>
                                    </select>
                                </td>
                            </tr>
                        </tbody>

                    </table>
                    <table class="table table-bordered table-white mt-4">
                        <thead>
                            <tr class="text-center">
                                <th>NỘI DUNG:</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <textarea class="summernote w-100" asp-for="Contents"></textarea>
                                </td>
                            </tr>
                        </tbody>
                       
                    </table>
                    <div class="d-flex align-items-start mt-3 justify-content-between">
                        <a asp-action="Index" class="btn px-4 bg-gradient-success float-right text-white font-weight-bold">Trở lại</a>

                        <div class="form-group">
                            <input type="submit" value="Lưu thay đổi" class="font-weight-bold btn bg-gradient-info px-4" />
                        </div>
                    </div>
                </form>
            </div>
           
        </div>
    </div>
    <script>
        jQuery(document).ready(function () {
            $('.summernote').summernote({
                fontNames: ['Arial', 'Arial Black', 'Comic Sans MS', 'Courier New'],
                styleTags: ['p', 'h1', 'h2', 'h3', 'h4', 'h5'],
                height: 700,
                minHeight: null,
                maxHeight: null,
                focus: true
            });
        });
    </script>

</section>















