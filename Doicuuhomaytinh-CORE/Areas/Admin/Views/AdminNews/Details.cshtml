@model Doicuuhomaytinh_CORE.Models.News

@{
    ViewData["Title"] = "Chi tiết bài viết";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="card-body">
    <div id="" class="jsgrid" style="position: relative; height: 100%; width: 100%;">
        <div class="d-flex align-items-start mb-3 justify-content-between">
            <a asp-action="Edit" asp-route-id="@Model.PostId" class="btn px-4 float-right text-white font-weight-bold bg-gradient-info">Chỉnh sửa</a>
            <a asp-action="Delete" asp-route-id="@Model.PostId" class="btn px-4 float-right font-weight-bold bg-gradient-danger">Xóa</a>
        </div>
        <table class="table table-bordered table-white">
            <thead>
                <tr class="text-center">
                    <th scope="col">PostId</th>
                    <th scope="col">Ảnh</th>
                    <th scope="col">Tiêu đề</th>
                    <th scope="col">Trạng thái </th>
                    <th scope="col">Bài viết Hot? </th>
                    <th scope="col">Bài NewFeed? </th>
                    <th scope="col">Danh mục</th>
                </tr>
            </thead>
            <tbody>
                    <tr class="text-center">
                        <td style="width:100px">@Model.PostId</td>
                        <td>
                            <img class="img-fluid rounded" width="150" src="~/images/news/@Model.Thumb">
                        </td>
                        <td style="width:400px">@Model.Title</td>
                        <td>
                            @if (Model.Acive == true)
                            {
                                <input type="checkbox" checked>
                            }
                            else
                            {
                                <input type="checkbox">
                            }
                        </td>
                        <td>
                            @if (Model.Ishot == true)
                            {
                                <input type="checkbox" checked>
                            }
                            else
                            {
                                <input type="checkbox">
                            }
                        </td>
                        <td>
                            @if (Model.IsNewfeed == true)
                            {
                                <input type="checkbox" checked>
                            }
                            else
                            {
                                <input type="checkbox">
                            }
                        </td>
                        <td>
                            @Model.Cate.CateName
                        </td>
                    </tr>
            </tbody>
        </table>
        <table class="table table-bordered table-white mt-4">
            <thead>
                <tr class="text-center">
                    <th>NỘI DUNG:</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        @Html.Raw(Model.Contents)
                    </td>
                </tr>
            </tbody>

        </table>
        <div class="d-flex align-items-start mt-3 justify-content-between">
            <a asp-action="Index" class="btn px-4 bg-gradient-success float-right text-white font-weight-bold">Trở lại</a>

        </div>

    </div>
</div>