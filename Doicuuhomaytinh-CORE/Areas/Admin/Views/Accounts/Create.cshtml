@model Doicuuhomaytinh_CORE.Models.Account

@{
    ViewData["Title"] = "Thêm tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}



<section class="content">
    <div class="card">
        <div class="card-header">
            <h3 class="font-weight-bold text-success ">Thêm tài khoản</h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <div id="" class="jsgrid" style="position: relative; height: 100%; width: 100%;">
                <table class="table table-bordered table-dark">
                    <thead>
                        <tr class="text-center">
                            <th>Họ và tên</th>
                            <th>Email</th>
                            <th>Mật khẩu </th>
                            <th>Số điện thoại </th>
                            <th>Quyền</th>
                            <th>Tác vụ</th>
                        </tr>

                    </thead>
                    <form asp-action="Create" class="jsgrid-grid-body" style="height: 821px;">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <tbody>
                        <tr class="text-center">
                            <td >
                                <div class="form-group">
                                    <input required asp-for="FullName" class="form-control" />
                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                </div>
                            </td>
                            <td >
                                <div class="form-group">
                                    <input required type="email" asp-for="Email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </td>
                            <td >
                                <div class="form-group">
                                    <input required asp-for="Password" type="password" class="form-control" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </td>
                            <td >
                                <div class="form-group">
                                    <input required asp-for="Phone" class="form-control" />
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                </div>
                            </td>
                            <td  style="width:100px">
                                <div class="form-group">
                                    <input asp-for="RoleId" class="form-control" />
                                    <span asp-validation-for="RoleId" class="text-danger"></span>
                                </div>
                            </td>
                            <td >
                                <div class="form-group">
                                    <input type="submit" value="Tạo mới" class="btn bg-gradient-info px-4" />
                                </div>
                            </td>
                        </tr>
                    </tbody>
                    </form>

                </table>
                <a asp-action="Index" class="btn px-4 bg-gradient-success mt-4 float-right text-white font-weight-600">Trở lại</a>

            </div>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</section>

