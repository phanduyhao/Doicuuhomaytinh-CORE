@model IEnumerable<Doicuuhomaytinh_CORE.Models.Account>

@{
    ViewData["Title"] = "Quản lý tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="content">
    <div class="card">
        <div class="card-header">
            <h3 class="font-weight-bold text-success ">Quản lý Tài khoản</h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <div id="" class="jsgrid" style="position: relative; height: 100%; width: 100%;">
                <table class="table table-bordered table-white">
                    <thead>
                        <tr class="text-center">
                            <th scope="col">AccountId</th>
                            <th scope="col">Họ và tên</th>
                            <th scope="col">Email</th>
                            <th scope="col">Số điện thoại </th>
                            <th scope="col">Quyền</th>
                            <th scope="col">PASS</th>
                            <th scope="col">SALT</th>
                            <th scope="col">Tác vụ</th>
                        </tr>
                    </thead>
                   
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="text-center">
                                <td scope="col">@item.AccountId</td>
                                <td>@item.FullName</td>
                                <td>@item.Email</td>
                                <td>@item.Phone</td>
                                <td>@item.RoleName</td>
                                <td>  @item.Password</td>
                                <td> @item.Salt</td>
                                <td>
                                    <div class="row align-items-center justify-content-around">
                                        <a asp-action="Edit" asp-route-id="@item.AccountId" class="font-weight-bold col-xl-5 col-12 btn mb-3 mb-xl-0  bg-gradient-info">Chỉnh sửa</a>
                                        <div class="col-xl-2 col-0"></div>
                                        <a asp-action="Delete" asp-route-id="@item.AccountId" class="font-weight-bold col-xl-5 col-12 btn bg-gradient-danger">Xóa</a>
                                    </div>
                                </td>
                            </tr>

                        }
                    </tbody>
                </table>

                <a asp-action="Create" class="btn btn-primary px-4 mt-4 float-right font-weight-bold">Thêm mới</a>
            </div>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</section>