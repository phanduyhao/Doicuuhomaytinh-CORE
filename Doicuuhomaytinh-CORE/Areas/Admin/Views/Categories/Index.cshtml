@model IEnumerable<Doicuuhomaytinh_CORE.Models.Category>

@{
    ViewData["Title"] = "Quản lý Danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="content">
    <div class="card">
        <div class="card-header">
            <h3 class="font-weight-bold text-success ">Quản lý Danh mục</h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <div id="" class="jsgrid" style="position: relative; height: 100%; width: 100%;">
                <table class="table table-bordered table-dark">
                    <thead>
                        <tr class="text-center">
                            <th scope="col">CateID</th>
                            <th scope="col">Ảnh</th>
                            <th scope="col">Tên Danh mục</th>
                            <th scope="col">Ordering </th>
                            <th scope="col">Parent</th>
                            <th scope="col">Level</th>
                            <th scope="col">Mô tả</th>
                            <th scope="col">Tác vụ</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="text-center">
                                <td style="width:100px">@item.CateId</td>
                                <td >
                                    <img class="img-fluid rounded" width="150" src="~/images/category/@item.Thumb">
                                </td>
                                <td >@item.CateName</td>
                                <td style="width:100px">@item.Ordering</td>
                                <td style="width:100px">@item.Parent</td>
                                <td style="width:100px">@item.Levels</td>
                                <td style="width:400px">@item.Description</td>
                                <td style="width:360px">
                                    <div class="row align-items-center justify-content-around">
                                        <a asp-action="Edit" asp-route-id="@item.CateId" class="col-xl-5 col-12 btn mb-3 mb-xl-0  bg-gradient-info">Chỉnh sửa</a>
                                        <div class="col-xl-2 col-0"></div>
                                        <a asp-action="Delete" asp-route-id="@item.CateId" class="col-xl-5 col-12 btn bg-gradient-danger">Xóa</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a asp-action="Create" class="btn btn-primary px-4 mt-4 float-right">Thêm mới</a>
                
            </div>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</section>
