@model Doicuuhomaytinh_CORE.Models.Advertisement

@{
    ViewData["Title"] = "Xóa quảng cáo";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card-body">
    <div class="card-header">
        <h3 class="font-weight-bold text-warning">Chấp nhận xóa quảng cáo này ?</h3>
    </div>
    <div id="" class="jsgrid" style="position: relative; height: 100%; width: 100%;">
        <table class="table table-bordered table-white">
            <thead>
                <tr class="text-center">
                    <th scope="col">AdsId</th>
                    <th scope="col">Ảnh</th>
                    <th scope="col">Tiêu đề</th>
                    <th scope="col">Link</th>
                    <th scope="col">Quảng cáo Hot? </th>
                    <th scope="col">Quảng cáo NewFeed? </th>
                    <th scope="col">Trạng thái </th>
                </tr>
            </thead>
            <tbody>
                <tr class="text-center">
                    <td scope="col">@Model.AdsId</td>
                    <td>
                        <img class="img-fluid rounded" width="150" src="~/images/Ads/@Model.Thumb">
                    </td>
                    <td>@Model.Title</td>
                    <td>@Model.Alias</td>

                    <td>
                        @if (Model.Ishot == true)
                        {
                            <input type="checkbox" checked>
                        }
                        else
                        {
                            <input type="checkbox">
                        }
                    </td>
                    <td>
                        @if (Model.IsNewfeed == true)
                        {
                            <input type="checkbox" checked>
                        }
                        else
                        {
                            <input type="checkbox">
                        }
                    </td>
                    <td>
                        @if (Model.Active == true)
                        {
                            <input type="checkbox" checked>
                        }
                        else
                        {
                            <input type="checkbox">
                        }
                    </td>
                    
                </tr>
            </tbody>
        </table>
        <div class="d-flex align-items-center justify-content-between">
            <a asp-action="Index" class="btn px-4 bg-gradient-success mt-4 float-right text-white font-weight-bold">Trở lại</a>
            <form asp-action="Delete">
                <input type="submit" value="Xóa" class="btn btn-danger mt-3 px-4 font-weight-bold" />
            </form>
        </div>
      
    </div>
</div>